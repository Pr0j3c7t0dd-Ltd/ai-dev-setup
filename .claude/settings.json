{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "afplay .ai-setup/sounds/Hero.aiff --volume 0.3"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".ai-setup/scripts/lint-and-typecheck.sh $FILE_PATH"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay .ai-setup/sounds/Glass.aiff --volume 0.3"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay .ai-setup/sounds/Ping.aiff --volume 0.5"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay .ai-setup/sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}